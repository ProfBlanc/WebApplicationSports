@model IEnumerable<WebApplicationSports.Models.Player>



@if (!TempData.ContainsKey("partialDisplay"))
    {
        
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerNumber)
            </th>
@if (!TempData.ContainsKey("partialDisplay"))
    {

            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerNumber)
            </td>
                @if (!TempData.ContainsKey("partialDisplay"))
                {

            <td>
                @Html.DisplayFor(modelItem => item.Team.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
            </td>
                }
                </tr>
}
    </tbody>
</table>
